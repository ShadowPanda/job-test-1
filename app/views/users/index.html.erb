<div>
	You are in: 
	<ul class="breadcrumb">
		<li class="active"><a href="#">Users</a></li>
	</ul>
</div>

<h1 id="title">
	List of users
	
	<%= link_to({:action => :edit}, {:class => "btn btn-primary"}) do %><i class="icon-plus icon-white"></i> Add new user<% end %>
</h1>
<br/>

<% if @records.present? then %>
<table id="index" class="table table-bordered zebra-striped">
	<thead>
		<tr>
			<th>User</th>
			<th>Following</th>
			<th>Followed by</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @records.each do |record| %>
		<tr>
			<td><%= record.name %></td>
			<td><%= record.followings.count %></td>
			<td><%= record.followed_by.count %></td>
			<td>
				<%= link_to({:action => :show, :id => record.id }, {:class => "btn btn-primary"}) do %><i class="icon-screenshot icon-white"></i> Details<% end %>
				<%= link_to({:action => :edit, :id => record.id }, {:class => "btn btn-secondary"}) do %><i class="icon-edit"></i> Edit<% end %>
				<%= link_to({:action => :remove, :id => record.id }, {:class => "btn btn-danger"}) do %><i class="icon-remove icon-white"></i> Delete<% end %>
			</td>			
		</tr>
		<% end %>
	</tbody>
</table>
<% else %>
	<div class="alert block-message alert- error">
		<h2>No user found.</h2>
	</div>
<% end %>